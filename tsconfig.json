{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/Images*"],
      "@components/*": ["src/components/*"],
      "@constants/*": ["src/constants/*"],
      "@content/*": ["src/content/*"],
      "@data/*": ["src/data/*"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@localization/*": ["src/localization/*"],
      "@navigation/*": ["src/navigation/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@store/*": ["src/store/*"],
      "@theme/*": ["src/theme/*"],
      "@types/*": ["src/types/*"],
      "@utility/*": ["src/utility/*"],
      "@vendor/*": ["src/vendor/*"]
    }
  }
}
